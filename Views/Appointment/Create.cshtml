@model Zapp.Models.AppointmentViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Appointment.Scheduled" class="control-label"></label>
                <input asp-for="Appointment.Scheduled" class="form-control"/>
                <span asp-validation-for="Appointment.Scheduled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.CustomerId" class="control-label">Selecteer Klant</label>
                <select asp-for="Appointment.CustomerId" class="form-control" asp-items="Model.AllCustomersListItems"></select>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.EmployeeId" class="control-label">Selecteer Medewerker</label>
                <select asp-for="Appointment.EmployeeId" class="form-control" asp-items="Model.AllEmployeesListItems"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
