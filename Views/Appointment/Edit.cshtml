@model Zapp.Models.AppointmentViewModel

@{
    Layout = "_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Appointment</h4>
    <hr />
    <form asp-action="Edit">
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Appointment.Scheduled" value="@Model.Appointment.Scheduled.ToString("yyyy-MM-ddTHH:mm")" class="form-control" />
                    <span asp-validation-for="Appointment.Scheduled" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select asp-for="Appointment.CustomerId" class="form-control" asp-items="Model.AllCustomersListItems">
                        <option value="" disabled selected>Selecteer Klant</option>
                    </select>
                </div>
                <div class="form-group">
                    <select asp-for="Appointment.EmployeeId" class="form-control" asp-items="Model.AllEmployeesListItems">
                        <option value="" disabled selected>Selecteer Medewerker</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="container">
                <datalist id="task-list">
                    @foreach (var name in Model.AllTaskNames)
                    {
                        <option value="@name"></option>
                    }
                </datalist>
                <table class="table" id="appointment-table">
                    <thead>
                        <tr>
                            <th>
                                <span>#</span>
                            </th>
                            <th>
                                <span>Taak</span>
                            </th>
                            <th>
                                <span>Additionele Informatie</span>
                            </th>
                            <th>Uitgevoerd?</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int t = -1; }

                        @if (Model.CustomerTasks != null)
                        {
                            @foreach (var task in Model.CustomerTasks)
                            {
                                t++;
                                <tr>
                                    <td>
                                        <span id="row-index">@(t+1)</span>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            @*<input id="task-names" class="form-control" value="@task.Task.Name" />*@
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            @*<input id="task-info" value="@task.AdditionalInfo" type="text" class="form-control" />*@
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            @*<input id="is-task-done" type="checkbox" disabled class="form-control" />*@
                                        </div>
                                    </td>
                                    <td>
                                        @*<button id="addRow" onclick="addNewTask()">Add</button>*@
                                    </td>
                                </tr>
                            }
                        }
                        @foreach (var task in Model.AppointmentTasks)
                        {
                            <tr>
                                <td>
                                    <span id="row-index">@(t+1)</span>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <input id="task-names" list="task-list" name="AppointmentTasks[@t].Task.Name" asp-for="@task.Task.Name" class="form-control" placeholder="Zoek taak" />
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <input id="task-info" name="AppointmentTasks[@t].AdditionalInfo" asp-for="@task.AdditionalInfo" type="text" class="form-control" />
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <input id="is-task-done" name="AppointmentTasks[@t].IsDone" type="checkbox" asp-for="@task.IsDone" disabled class="form-control" />
                                    </div>
                                </td>
                                <td>
                                    <button id="addRow" onclick="addNewTask()">Add</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>
